<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TareaLayout.Ejercicio19_20">
    <ContentPage.Content>
        <AbsoluteLayout>
            <Image AbsoluteLayout.LayoutBounds="0,0,1,1" 
                   AbsoluteLayout.LayoutFlags="All"
                   Aspect="AspectFill" 
                   Source="http://lorempixel.com/1920/1080/nature/7"/>
            <Label HorizontalOptions="Center"
                   VerticalOptions="Center"
                   TextColor="#ffff"
                FontSize="30" Margin="20" Text="Relax"/>

            <StackLayout Padding="30, 0" HorizontalOptions="CenterAndExpand">
                <BoxView Opacity="50"/>
                <Label Text="Profile" TextColor="#ffff"/>
                <Label Text="Meditate" TextColor="#ffff"/>
                <Label Text="Themes" TextColor="#ffff"/>
            </StackLayout>
        </AbsoluteLayout>
        
    </ContentPage.Content>
</ContentPage>